{
    "name": "openfed/openfed8-project",
    "description": "Project template for Drupal 8 sites built with the Openfed distribution.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Blue4You",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer"
        ]
    },
    "extra": {
        "merge-plugin": {
            "require": [
                "composer.openfed.json"
            ],
            "recurse": true,
            "replace": false,
            "ignore-duplicates": false,
            "merge-dev": true,
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true
        },
        "installer-types": [
            "openfed-ckeditor-plugin",
            "openfed-ckeditor-template"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/openfed": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:openfed-ckeditor-template"
            ],
            "docroot/libraries/ckeditor/plugins/{$name}" : [
                "type:openfed-ckeditor-plugin"
            ]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./docroot"
            }
        },
        "enable-patching": true
    },
    "config": {
        "platform": {
            "php": "7.3"
        }
    }
}
