{
    "name": "openfed/openfed8-project",
    "description": "Project template for Drupal 8 sites built with the Openfed distribution.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Blue4You",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "merge-plugin": {
            "require": [
                "composer.openfed.json"
            ],
            "recurse": true,
            "replace": false,
            "ignore-duplicates": false,
            "merge-dev": true,
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true
        },
        "installer-types": [
            "openfed-ckeditor-plugin",
            "openfed-ckeditor-template",
            "simplesamlphp-module",
            "theme-library"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:openfed-ckeditor-template",
                "type:theme-library"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/openfed": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "docroot/libraries/ckeditor/plugins/{$name}": [
                "type:openfed-ckeditor-plugin"
            ],
            "docroot/libraries/simplesamlphp/modules/{$name}": [
                "type:simplesamlphp-module"
            ]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./docroot"
            }
        }
    },
    "config": {
        "platform": {
            "php": "7.3"
        },
        "allow-plugins": {
            "simplesamlphp/composer-module-installer": true,
            "composer/installers": true,
            "oomphinc/composer-installers-extender": true,
            "cweagans/composer-patches": true,
            "drupal/console-extend-plugin": true,
            "drupal/core-composer-scaffold": true,
            "wikimedia/composer-merge-plugin": true
        }
    }
}
